@model IEnumerable<slnQF.SP_CONSULTA_PRO_PRE_NOMResult>

<div class="col-md-12">
    @{
        WebGrid grid = new WebGrid(Model, canPage: false, selectionFieldName: "selectedRow", ajaxUpdateContainerId: "gridNomRel");
    }
    <div class="table-responsive">
        <div id="gridNomRel">
            @grid.GetHtml(
                                   htmlAttributes: new { width = "100%" },
                                     mode: WebGridPagerModes.All,
                                     columns: new[] {
                                     grid.Column("ID_PRESENTACION", "ID", null, "text-center", false),
                                     grid.Column("NOMBRE_PRESENTACION", "PRESENTACION", null, "text-center", false),
                                     grid.Column("ID_NOMBRE_COMERCIAL", "ID", null, "text-center", false),
                                     grid.Column("NOMBRE_COMERCIAL", "NOMBRE COMERCIAL", null, "text-center", false),
                                      grid.Column("CODIGO_SAP", "CODIGO SAP", null, "text-center", false),
                                     grid.Column("ESTADO", "ESTADO", null, "text-center", false)
                                 })
        </div>
    </div>
</div>

<script type="text/javascript">

    $(function () {
        $('#gridNomRel table').DataTable({
            "pageLength": 3,
            //"searching": true,
            "paging": true,

            "searching": true,

            fixedColumns: true
        });
    });
</script>
