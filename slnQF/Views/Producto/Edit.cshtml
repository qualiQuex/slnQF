@model slnQF.Models.ProductoModels


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="modal-body form-horizontal">
        <h4>Editar producto</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(model => model.ID_PRODUCTO)

        <label for="NOMBRE">Nombre</label>
        @Html.EditorFor(model => model.NOMBRE, new { htmlAttributes = new { @class = "form-control" } })

        <br />
        <label for="DESCRIPCION">Descripcion</label>
        @Html.EditorFor(model => model.DESCRIPCION, new { htmlAttributes = new { @class = "form-control" } })

        <br />
        <label for="CANTIDAD_MUESTRAS">Cantidad Muestras</label>
        @Html.EditorFor(model => model.CANTIDAD_MUESTRAS, new { htmlAttributes = new { @class = "form-control" } })


        <br />
        <label for="ID_FORMA_FARMACEUTICA">F. Farmaceutica</label>
        @Html.DropDownListFor(model => model.ID_FORMA_FARMACEUTICA, ViewBag.FFARMACEUTICADDL as IEnumerable<SelectListItem>, new { @class = "form-control" })


        <br />
        <label for="CONCENTRACION">Concentracion</label>
        @Html.EditorFor(model => model.CONCENTRACION, new { htmlAttributes = new { @class = "form-control" } })


        <br />
        <label for="ID_UOM">UOM</label>
        @Html.DropDownListFor(model => model.ID_UOM, ViewBag.UOMDDL as IEnumerable<SelectListItem>, new { @class = "form-control" })


        <br />
        <label for="ESTADO">ESTADO</label>
        @Html.DropDownListFor(model => model.ESTADO, ViewBag.CategoriesDDL as IEnumerable<SelectListItem>, new { @class = "form-control" })

        <br />
        <label for="REFERENCIA">Referencia</label>
        @Html.EditorFor(model => model.REFERENCIA, new { htmlAttributes = new { @class = "form-control" } })
        <br />
        <label for="CONDICION_ALMACENA">Condiciones de almacenamiento</label>
        @Html.EditorFor(model => model.CONDICION_ALMACENA, new { htmlAttributes = new { @class = "form-control" } })





        <div class="modal-footer">
            <div id="DivEditar">
                <input type="button" value="Guardar" class="btn btn-primary" onclick="UpdateProduct()" />
            </div>
        </div>

    </div>
}

<script type="text/javascript">
    initialize();

    function initialize() {

        $.ajax({
            url: '/Usuario/jsTraeAccesosUser/',
            type: "GET",
            dataType: "JSON",
            data: {},
            async: false,
            success: function (json) {
                var v_cuentaEditar = 0;

                $.each(json, function (j, item2) {
                    //menu operativo
                    if (item2.IDPERMISO == 19 && item2.IDACCESO == 3)
                        v_cuentaEditar = v_cuentaEditar + 1;
                });



                if (v_cuentaEditar <= 0) {
                    document.getElementById("DivEditar").style.display = "none";
                }




            },
            error: function (error) { console.log(error); }
        });


    }
    function UpdateProduct() {

        var ID_PRODUCTO = $("#ID_PRODUCTO").val();
        var DESCRIPCION = $("#DESCRIPCION").val(); 
        var CANTIDAD_MUESTRAS = $("#CANTIDAD_MUESTRAS").val();
        var NOMBRE = $("#NOMBRE").val();
        var ESTADO = $("#ESTADO").val();
        var ID_FORMA_FARMACEUTICA = $("#ID_FORMA_FARMACEUTICA").val();
        var CONCENTRACION = $("#CONCENTRACION").val();
        var ID_UOM = $("#ID_UOM").val();
        var REFERENCIA = $("#REFERENCIA").val();
        var CONDICION_ALMACENA = $("#CONDICION_ALMACENA").val();
        var product = {
            "ID_PRODUCTO": ID_PRODUCTO, "DESCRIPCION": DESCRIPCION,
            "ESTADO": ESTADO, "NOMBRE": NOMBRE,
            "ID_FORMA_FARMACEUTICA": ID_FORMA_FARMACEUTICA, "CONCENTRACION": CONCENTRACION,
            "ID_UOM": ID_UOM, "CANTIDAD_MUESTRAS": CANTIDAD_MUESTRAS, "REFERENCIA": REFERENCIA
            , "CONDICION_ALMACENA": CONDICION_ALMACENA
        };

        $.post('/Producto/Edit', product,

            function (data) {
                if (data.ID == 0) {
                    swal({ title: "Informacion", text: data.MENSAJE, type: "success", showConfirmButton: true },
                        function (isConfirm) { if (isConfirm) { location = location.href.replace('#', ''); } });
                } else { swal({ title: "Informacion", text: data.MENSAJE, type: "error", showConfirmButton: true }); }
            }
       , 'json');

    }
</script>