@model slnQF.Models.PersonaModels


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="modal-body form-horizontal">
        <h4>Creacion de Persona</h4>
        <hr />
         
        <br />
        <label for="ID_USER">Usuario</label>
        @Html.DropDownListFor(model => model.ID_USER, ViewBag.UsuariosDDL as IEnumerable<SelectListItem>, new { @class = "form-control" })
        <br />
 
        <label for="ID_PUESTO">Puesto</label>
        @Html.DropDownListFor(model => model.ID_PUESTO, ViewBag.PuestosDDL as IEnumerable<SelectListItem>, new { @class = "form-control" })
        <br />

        <div class="modal-footer">
            <div id="DivGuardar">
                <input type="button" value="Guardar" class="btn btn-primary" onclick="SaveProduct()" />
            </div>
        </div>
    </div>

}

<script type="text/javascript">
    initialize();

    function initialize() {

        $.ajax({
            url: '/Usuario/jsTraeAccesosUser/',
            type: "GET",
            dataType: "JSON",
            data: {},
            async: false,
            success: function (json) {
                var v_cuentaGuardar = 0;

                $.each(json, function (j, item2) {
                    //menu operativo
                    if (item2.IDPERMISO == 34 && item2.IDACCESO == 1)
                        v_cuentaGuardar = v_cuentaGuardar + 1;
                });



                if (v_cuentaGuardar <= 0) {
                    document.getElementById("DivGuardar").style.display = "none";
                }




            },
            error: function (error) { console.log(error); }
        });


    }
    function SaveProduct() {
        var ID_USER = $("#ID_USER").val();
        var ID_PUESTO = $("#ID_PUESTO").val();
       

        var product = {
            "ID_USER": ID_USER, "ID_PUESTO": ID_PUESTO, "ESTADO": 1
        };

        $.post('/Persona/Creates', product,
            function (data) {
                if (data.ID == 0) {
                    swal({ title: "Informacion", text: data.MENSAJE, type: "success", showConfirmButton: true },
                        function (isConfirm) { if (isConfirm) { location = location.href.replace('#', ''); } });
                } else { swal({ title: "Informacion", text: data.MENSAJE, type: "error", showConfirmButton: true }); }
            }
       , 'json');
    }
</script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

}
