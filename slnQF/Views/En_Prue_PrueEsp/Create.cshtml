@model slnQF.Models.En_Prue_PrueEspModels

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="modal-body form-horizontal">
        <h4>Creacion de Prueba Especifica a Prueba de Ensayo <label>"@(ViewBag.ID_ENSAYO ?? String.Empty)"</label></h4>
        <hr />
        <input type="text" style="visibility: hidden;" id="ID_ENSAYO" value="@(ViewBag.ID_ENSAYO ?? String.Empty)">

        <br />
        <label for="ID_PRUEBA">PRUEBA</label>
        @Html.DropDownListFor(model => model.ID_PRUEBA, ViewBag.PruebaDDL as IEnumerable<SelectListItem>, new { @class = "form-control" })
        <br />
        <label for="ID_PRUEBA_ESPECIFICA">PRUEBA ESPECIFICA</label>
        @Html.DropDownListFor(model => model.ID_PRUEBA_ESPECIFICA, ViewBag.PruebaEspecificaDDL as IEnumerable<SelectListItem>, new { @class = "form-control" })
        <br />

 

        <div class="modal-footer">
            <div id="DivGuardar">
                <input type="button" value="Guardar" class="btn btn-primary" onclick="SaveProduct()" />
            </div>
        </div>
    </div>

}

<script type="text/javascript">
    initialize();

    function initialize() {

        $.ajax({
            url: '/Usuario/jsTraeAccesosUser/',
            type: "GET",
            dataType: "JSON",
            data: {},
            async: false,
            success: function (json) {
                var v_cuentaGuardar = 0;

                $.each(json, function (j, item2) {
                    //menu operativo
                    if (item2.IDPERMISO == 31 && item2.IDACCESO == 1)
                        v_cuentaGuardar = v_cuentaGuardar + 1;
                });



                if (v_cuentaGuardar <= 0) {
                    document.getElementById("DivGuardar").style.display = "none";
                }




            },
            error: function (error) { console.log(error); }
        });


    }
    function SaveProduct() {
        var ID_ENSAYO = $("#ID_ENSAYO").val();
        var ID_PRUEBA = $("#ID_PRUEBA").val();
        var ID_PRUEBA_ESPECIFICA = $("#ID_PRUEBA_ESPECIFICA").val();
        

        var product = {
            "ID_ENSAYO": ID_ENSAYO, "ID_PRUEBA": ID_PRUEBA, "ESTADO": 1, "ID_PRUEBA_ESPECIFICA": ID_PRUEBA_ESPECIFICA
        };

        $.post('/En_Prue_PrueEsp/create', product,
            function (data) {
                if (data.ID == 0) {
                    swal({ title: "Informacion", text: data.MENSAJE, type: "success", showConfirmButton: true },
                        function (isConfirm) { if (isConfirm) { location = location.href.replace('#', ''); } });
                } else { swal({ title: "Informacion", text: data.MENSAJE, type: "error", showConfirmButton: true }); }
            }
       , 'json');

    }
</script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

}
