

@model slnQF.TREPORTE_PARAMETRO


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="modal-body form-horizontal">
        <h4>Agregar Parametro</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(model => model.ID_REPORTE)
         
        <label for="ID_TIPO_PARAMETRO">TIPO DATO</label>
        @Html.DropDownListFor(model => model.ID_TIPO_PARAMETRO, ViewBag.CategoriesDDL as IEnumerable<SelectListItem>, new { @class = "form-control" })

        <br />
        <label for="NOMBRE_PARAMETRO">Nombre</label>
        @Html.EditorFor(model => model.NOMBRE_PARAMETRO, new { htmlAttributes = new { @class = "form-control" } })

        <br />
        <label for="DESC_PARAMETRO">Descripcion</label>
        @Html.EditorFor(model => model.DESC_PARAMETRO, new { htmlAttributes = new { @class = "form-control" } })

        <div class="modal-footer">
            <div id="DivEditar">
                <input type="button" value="Guardar" class="btn btn-primary" onclick="UpdateProduct()" />
            </div>
        </div>

    </div>
}

<script type="text/javascript">
    initialize();

    function initialize() {

        $.ajax({
            url: '/Usuario/jsTraeAccesosUser/',
            type: "GET",
            dataType: "JSON",
            data: {},
            async: false,
            success: function (json) {
                var v_cuentaEditar = 0;

                $.each(json, function (j, item2) {
                    //menu operativo
                    if (item2.IDPERMISO == 47 && item2.IDACCESO == 3)
                        v_cuentaEditar = v_cuentaEditar + 1;
                });



                if (v_cuentaEditar <= 0) {
                    document.getElementById("DivEditar").style.display = "none";
                }




            },
            error: function (error) { console.log(error); }
        });



    }
    function UpdateProduct() {
        startSpinGen();
        
        var ID_REPORTE = $("#ID_REPORTE").val();
        var ID_TIPO_PARAMETRO = $("#ID_TIPO_PARAMETRO").val();
        var NOMBRE_PARAMETRO = $("#NOMBRE_PARAMETRO").val();
        var DESC_PARAMETRO = $("#DESC_PARAMETRO").val();

        

        var product = {
            "ID_REPORTE": ID_REPORTE, "ID_TIPO_PARAMETRO": ID_TIPO_PARAMETRO,
            "NOMBRE_PARAMETRO": NOMBRE_PARAMETRO, "DESC_PARAMETRO": DESC_PARAMETRO
        };

        $.post('/Reporteria/creaParamJS', product,
        function (data) {
            stopSpinGen();
            if (data.ID == 0) {
                swal({ title: "Informacion", text: data.MENSAJE, type: "success", showConfirmButton: true },
                    function (isConfirm) {
                        if (isConfirm) {
                            $("#DivToAppendPartialViewList").empty();
                            var ph2 = $("#DivToAppendPartialViewList");
                            ph2.load("/Reporteria/ListadoParametro?id=" + ID_REPORTE);
                        }
                    });
            } else { swal({ title: "Informacion", text: data.MENSAJE, type: "error", showConfirmButton: true }); }
        }
   , 'json');
    }
</script>