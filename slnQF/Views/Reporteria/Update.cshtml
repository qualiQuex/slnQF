
@model slnQF.TREPORTE


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="modal-body form-horizontal">
        <h4>Editar Reporte</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(model => model.ID_REPORTE)
        @Html.HiddenFor(model => model.BDPASS)

 
        <br />
        <label for="ESTADO">ESTADO</label>
        @Html.DropDownListFor(model => model.ESTADO, ViewBag.CategoriesDDL as IEnumerable<SelectListItem>, new { @class = "form-control" })

        <br />
        <label for="DESCRIPCION">Descripcion</label>
        @Html.EditorFor(model => model.DESCRIPCION, new { htmlAttributes = new { @class = "form-control" } })

        <br />
        <label for="BDSERVER">BD Server</label>
        @Html.EditorFor(model => model.BDSERVER, new { htmlAttributes = new { @class = "form-control" } })


        <br />
        <label for="BDNAME">BD Nombre</label>
        @Html.EditorFor(model => model.BDNAME, new { htmlAttributes = new { @class = "form-control" } })

        <br />
        <label for="BDUSER">BD User</label>
        @Html.EditorFor(model => model.BDUSER, new { htmlAttributes = new { @class = "form-control" } })

        <br />
        <label for="BDPASS">BD Pass</label>
        <input type="password" id="PSW" class="form-control" />
        <br />
        <label for="BDSP">BD Procedure</label>

        @Html.EditorFor(model => model.BDSP, new { htmlAttributes = new { @class = "form-control" } })








        <div class="modal-footer">
            <div id="DivEditar">
                <input type="button" value="Guardar" class="btn btn-primary" onclick="UpdateProduct()" />
            </div>
        </div>

    </div>
}

<script type="text/javascript">
    initialize();

    function initialize() {

        $.ajax({
            url: '/Usuario/jsTraeAccesosUser/',
            type: "GET",
            dataType: "JSON",
            data: {},
            async: false,
            success: function (json) {
                var v_cuentaEditar = 0;

                $.each(json, function (j, item2) {
                    //menu operativo
                    if (item2.IDPERMISO == 47 && item2.IDACCESO == 3)
                        v_cuentaEditar = v_cuentaEditar + 1;
                });



                if (v_cuentaEditar <= 0) {
                    document.getElementById("DivEditar").style.display = "none";
                }




            },
            error: function (error) { console.log(error); }
        });

        var BDPASS = $("#BDPASS").val();
        $("#PSW").val(BDPASS);
         
    }
    function UpdateProduct() {
        startSpinGen();
        var DESCRIPCION = $("#DESCRIPCION").val();
        var BDSERVER = $("#BDSERVER").val();
        var BDNAME = $("#BDNAME").val();
        var BDUSER = $("#BDUSER").val();
        var BDPASS = $("#PSW").val();
        var ID_PERMISO = $("#ID_PERMISO").val();
        var ESTADO = $("#ESTADO").val();
        var BDSP = $("#BDSP").val();
        var ID_REPORTE = $("#ID_REPORTE").val();
        var product = {
            "ID_REPORTE": ID_REPORTE, "DESCRIPCION": DESCRIPCION, "BDSERVER": BDSERVER, "BDSP": BDSP,
            "BDNAME": BDNAME, "BDUSER": BDUSER, "BDPASS": BDPASS, "ID_PERMISO": ID_PERMISO, "ESTADO": ESTADO
        };
        
        $.post('/Reporteria/updateJS', product,
        function (data) {
            stopSpinGen();
            if (data.ID == 0) {
                swal({ title: "Informacion", text: data.MENSAJE, type: "success", showConfirmButton: true },
                    function (isConfirm) { if (isConfirm) { location = location.href.replace('#', ''); } });
            } else { swal({ title: "Informacion", text: data.MENSAJE, type: "error", showConfirmButton: true }); }
        }
   , 'json');
    }
</script>