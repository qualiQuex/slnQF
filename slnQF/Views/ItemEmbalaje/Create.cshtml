@model slnQF.TITEM_EMBALAJE

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="modal-body form-horizontal">
        <h5>Creacion de Embalaje Item <label>@(ViewBag.ITEMNAME ?? String.Empty)</label></h5>
        <hr />
        @{
            SelectList list = ViewBag.ItemEmbalajeDDL;
        }
        <label for="itemCodeEmb">Embalaje</label>
        @Html.DropDownList("itemCodeEmb", list, new { @class = "form-control", onchange = "SelectedIndexChanged()" })
        @Html.HiddenFor(model => model.ITEMCODE)

        <br />
        @Html.LabelFor(model => model.CAPACIDAD)
        @Html.EditorFor(model => model.CAPACIDAD, new { htmlAttributes = new { @class = "form-control" } })
         

        <br />
        <div class="modal-footer">
            <div id="DivGuardar">
                <input type="button" value="Guardar" class="btn btn-primary" onclick="SaveProduct()" />
            </div>
        </div>
    </div>

}

<script type="text/javascript">
    initialize();

    function initialize() {

        $.ajax({
            url: '/Usuario/jsTraeAccesosUser/',
            type: "GET",
            dataType: "JSON",
            data: {},
            async: false,
            success: function (json) {
                var v_cuentaGuardar = 0;

                $.each(json, function (j, item2) {
                    //menu operativo
                    if (item2.IDPERMISO == 44 && item2.IDACCESO == 1)
                        v_cuentaGuardar = v_cuentaGuardar + 1;
                });



                if (v_cuentaGuardar <= 0) {
                    document.getElementById("DivGuardar").style.display = "none";
                }




            },
            error: function (error) { console.log(error); }
        });


    }

     
    function SaveProduct() {
        var pname = $("#itemCodeEmb option:selected").text();
        var CAPACIDAD = $("#CAPACIDAD").val();
        var ITEMCODE = $("#ITEMCODE").val();
        var CODIGO = $("#itemCodeEmb").val();
        var product = {
            "DESCRIPCION": pname, "ESTADO": 1, "CAPACIDAD": CAPACIDAD, "ITEMCODE": ITEMCODE, "CODIGO": CODIGO
        };

        $.post('/ItemEmbalaje/create', product,
            function (data) {
                if (data.ID == 0) {
                    swal({ title: "Informacion", text: data.MENSAJE, type: "success", showConfirmButton: true },
                        function (isConfirm) {
                            if (isConfirm) {
                                $("#DivToAppendPartialViewList").empty();
                                $("#DivToAppendPartialVoew").empty();
                               

                                var ph = $("#DivToAppendPartialVoew");
                                ph.load("/ItemEmbalaje/Create?Id=" + ITEMCODE)
                                var ph2 = $("#DivToAppendPartialViewList");
                                ph2.load("/ItemEmbalaje/Listado?Id=" + ITEMCODE);
                            }
                        });
                } else { swal({ title: "Informacion", text: data.MENSAJE, type: "error", showConfirmButton: true }); }
            }
       , 'json');

    }
</script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

}
